{
  "name": "@apy-finance/apy-core",
  "version": "5.3.0",
  "description": "",
  "keywords": [
    "ethereum",
    "solidity",
    "defi"
  ],
  "files": [
    "contracts",
    "artifacts",
    "utils/constants.js",
    "deployed_addresses"
  ],
  "scripts": {
    "check": "yarn lint",
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "test:unit": "hardhat test test-unit/*",
    "test:integration": "ENABLE_FORKING=true hardhat test test-integration/*",
    "defi-legos": "populate -m apy,centre,maker,tether | grep -i error",
    "lint": "solhint contracts/**/*.sol contracts/*.sol",
    "coverage": "hardhat coverage --network coverage --testfiles \"test-unit/*.js\"",
    "ganache": "ganache-cli",
    "fork:mainnet": "./scripts/fork_mainnet.sh",
    "emergency:withdraw": "yarn hardhat --network localhost run scripts/EmergencyAPYWithdraw.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "./git_hooks/commit-msg"
    }
  },
  "lint-staged": {
    "contracts/**/*.sol": "solhint -w 0",
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apy-finance/apy-core.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "author": "APY.Finance",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/apy-finance/apy-core/issues"
  },
  "homepage": "https://github.com/apy-finance/apy-core/README.md",
  "devDependencies": {
    "@apy-finance/defi-legos": "^2.1.2",
    "@gnosis.pm/mock-contract": "^4.0.0",
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.1",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/test-helpers": "^0.5.9",
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.14.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.24",
    "ganache-cli": "^6.10.2",
    "ganache-time-traveler": "^1.0.15",
    "hardhat": "^2.0.10",
    "husky": "4.0.10",
    "lint-staged": "^10.2.11",
    "prettier": "2.1.2",
    "solhint": "^3.2.0",
    "solidity-coverage": "^0.7.10"
  },
  "dependencies": {
    "@chainlink/contracts": "0.0.9",
    "@compound-finance/compound-js": "^0.1.0",
    "@openzeppelin/contracts": "3.2.0",
    "@openzeppelin/contracts-ethereum-package": "3.0.0",
    "abdk-libraries-solidity": "2.4.0",
    "chalk": "^4.1.0",
    "commander": "^6.2.0",
    "yargs": "^16.1.1"
  }
}
